
@{
    ViewBag.Title = "LearnBootstrap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title>Learn boostrap</title>
    <link href="~/Content/css/libs/bootstrap.min.css" rel="stylesheet">
    <style>
        .example {
            border: solid 1px black;
        }

        .example *{
            border: solid 1px black;
        }

        .first{ background-color: rgba(100, 0, 0, 0.5); }
        .second {
            background-color: rgba(100, 100, 0, 0.5);
        }
        .third {
            background-color: rgba(0, 100, 0, 0.5);
        }

        .box * {
            border: none;
        }

        .box div {
            background-color: lightgrey;
            border: yellow dashed 1px;
        }

        .b1 {
            padding:130px
        }
    </style>
</head>
<body>
    <h1>Hello, world!</h1>

    <p class="visible-xs">This paragraph is visible only on extra small devices.</p>

    <p class="visible-sm">This paragraph is visible only on small devices.</p>

    <p class="visible-md">This paragraph is visible only on medium devices.</p>

    <p class="visible-lg">This paragraph is visible only on large devices.</p>



<div class="container-fluid example">
    <div class="row">
        <div class="col-md-4 col-sm-6 first">First column</div>
        <div class="col-md-4 col-sm-6 second">Second column</div>
        <div class="col-md-4 col-sm-6 third">Third Column
            <p class="visible-sm">This paragraph is visible only on small devices.</p>
        </div>
    </div>
    <div class="row">

        <div class="col-sm-10 col-sm-offset-1">

            <!--Nested row within a column-->

            <div class="row">

                <div class="col-xs-3 col-sm-5 col-sm-offset-1">3213</div>

                <div class="col-xs-7 col-sm-6">31231</div>

            </div>

        </div>

    </div>
</div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="~/Scripts/libs/bootstrap.min.js"></script>
</body>
</html>
